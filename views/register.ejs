<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<style>
    body {
        text-align: center;
        background-image: url("./images/Background.jpg");
        background-repeat: no-repeat;
        background-size: cover;
    };
    .input-box {
        background: rgb(146, 118, 91);
        border-color: peachpuff;
        color: whitesmoke;
        text-align: center;
        border-radius: 10px;
        width: 75%;
        margin-bottom: 10px;
    }
    .jumbotron {
        margin: auto 10%;
        background: rgba(83, 46, 12, 0.548);
        color: peachpuff;
    }
    #password{
        margin-bottom: 2%;
        text-align: center;
    }
    #email{
        margin-bottom: 1%;
        text-align: center;
    }
    #name{
        margin-bottom: 1%;
        text-align: center; 
    }
</style>
<div class="header">
    <img class="logo" src="./images/logo.png">
</div>

<form class="jumbotron" action="/register" method="POST">
    <h1>Register</h1>
    <div>
        <!-- <label for="name">Name:</label> -->
        <input class="input-box" type="text" id="name" name="name" required placeholder="Name">
    </div>
    <div>
        <!-- <label for="email">Email:</label> -->
        <input class="input-box" type="email" id="email" name="email" required placeholder="Email">
    </div>
    <div>
        <!-- <label for="password">Password:</label> -->
        <input class="input-box" type="password" id="password" name="password" required placeholder="Password">
    </div>
    <button class="btn btn-primary" type="submit">Register</button>
    
</form>
<a href="/login">Login</a>