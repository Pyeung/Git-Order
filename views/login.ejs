<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<style>
    body {
        text-align: center;
        background-image: url("./images/Background.jpg");
        background-repeat: no-repeat;
        background-size: cover;
    };
    .input-box {
        background: rgb(146, 118, 91);
        border-color: peachpuff;
        color: whitesmoke;
        text-align: center;
        border-radius: 10px;
        width: 75%;
        margin-bottom: 10px;
    }
    .jumbotron {
        margin: auto 10%;
        background: rgba(83, 46, 12, 0.548);
        color: peachpuff;
    }
    .error-msg {
        color: red;
        font-size: 2rm;
    }
</style>
<!-- Throw any error on DOM -->
<div class="error-msg">
<% if (messages.error) { %>
    <%= messages.error %>
<% } %>
</div>
<div class="header">
    <img class="logo" src="./images/logo.png">
</div>

<form class="jumbotron" action="/login" method="POST">
    <h1>Login</h1>
    <div>
        <label for="email">Email:</label>
        <input class="input-box" type="email" id="email" name="email" required>
    </div>
    <div>
        <label for="password">Password:</label>
        <input class="input-box" type="password" id="password" name="password" required>
    </div>
    <button class="btn btn-primary" type="submit">Login</button>
    
</form>
<a href="/register">Register</a>