<div id="home">
  <div class="container">
    <div class="row">
      <div>
      <h1>{{msg}}</h1>
      </div>
      <div class="col-10">

        {{!-- Displaying Menus --}}
        <h3>Menu:</h3>
        <ul id="menu-list" class="list-group">
          {{#each menu}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="item/{{this.id}}">{{this.text}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>

        {{!-- Displaying Orders --}}
        <h3>Orders:</h3>
        <ul id="item-list" class="list-group">
          {{#each orders}}
          <li data-id="{{this.id}}" class="list-group-item">
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
<script src="/js/indexMenu.js"></script>
